            <Button Content="ADD TO CART" HorizontalAlignment="Left" Margin="190,259,0,0" VerticalAlignment="Top" Width="119" Click="btn_atcartcola"/>
            <Button Content="-" HorizontalAlignment="Left" Margin="4,261,0,0" VerticalAlignment="Top" Width="45" Foreground="Black" BorderBrush="{x:Null}" Background="#FFA3A0A0" FontWeight="Bold" FontSize="20" Height="32" Click="Btn_minusco"/>
            <Button Content="+" HorizontalAlignment="Left" Margin="140,261,0,0" VerticalAlignment="Top" Width="45" Foreground="Black" BorderBrush="{x:Null}" Background="#FFA3A0A0" FontWeight="Bold" FontSize="20" Height="32" Click="Btn_plusco"/>
            <TextBox x:Name="txt_qtyco" HorizontalAlignment="Left" Height="32" Margin="53,257,0,0" TextWrapping="Wrap" Text="Count  " VerticalAlignment="Top" Width="82" RenderTransformOrigin="0.5,0.5" CaretBrush="{x:Null}" SelectionBrush="{x:Null}" Foreground="Red" TextAlignment="Center" BorderBrush="#890028FF"></TextBox>
            <Label Content="Coca Cola (150ml)" HorizontalAlignment="Left" Margin="25,0,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.796,0.222" Width="272" Height="34" FontWeight="Bold" FontSize="20"/>
            <Label Content="Rs. 200/=" HorizontalAlignment="Left" Margin="255,230,0,0" VerticalAlignment="Top" Width="63" FontWeight="Bold"/>
