            <TextBox x:Name="txt_qtypep" HorizontalAlignment="Left" Height="32" Margin="53,257,0,0" TextWrapping="Wrap" Text="Count  " VerticalAlignment="Top" Width="82" RenderTransformOrigin="0.5,0.5" CaretBrush="{x:Null}" SelectionBrush="{x:Null}" Foreground="Red" TextAlignment="Center" BorderBrush="#890028FF"/>
            <Label Content="Pepsi (150ml)" HorizontalAlignment="Left" Margin="25,0,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.796,0.222" Width="272" Height="34" FontWeight="Bold" FontSize="20"/>
            <Label Content="Rs. 200/=" HorizontalAlignment="Left" Margin="255,230,0,0" VerticalAlignment="Top" Width="63" FontWeight="Bold"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="299" Margin="721,4,0,0" VerticalAlignment="Top" Width="319">
