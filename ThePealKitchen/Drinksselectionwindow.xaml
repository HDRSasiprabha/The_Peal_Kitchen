            <Button Content="+" HorizontalAlignment="Left" Margin="140,261,0,0" VerticalAlignment="Top" Width="45" Foreground="Black" BorderBrush="{x:Null}" Background="#FFA3A0A0" FontWeight="Bold" FontSize="20" Height="32" Click="Btn_pluscap"/>
